{
    "version": "0.2.0",
    "compounds": [
        {
            "presentation": {
                "order": 1
            },
            "name": "Run Extension & Attach to the Language Server",
            "configurations": ["Run Extension", "Attach to the Language Server"]
        },
        {
            "presentation": {
                "order": 2
            },
            "name": "Run Extension (all extensions disabled) & Attach to the Language Server",
            "configurations": ["Run Extension (all extensions disabled)", "Attach to the Language Server"]
        }
    ],
    "configurations": [
        {
            "presentation": {
                "hidden": true
            },
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/vscode-extension",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
                "${workspaceFolder}/examples"
            ],
            // Enable this when (custom) webviews need to be availble through the debugger
            // "debugWebviews": true,
            "cascadeTerminateToConfigurations": ["Attach to the Language Server"],
            "outFiles": ["${workspaceFolder}/**/dist/*.(m|c|)js", "!**/node_modules/**"]
        },
        {
            "presentation": {
                "hidden": true
            },
            "name": "Run Extension (all extensions disabled)",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/vscode-extension",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
                "${workspaceFolder}/examples"
            ],
            // Enable this when (custom) webviews need to be availble through the debugger
            // "debugWebviews": true,
            "cascadeTerminateToConfigurations": ["Attach to the Language Server"],
            "outFiles": ["${workspaceFolder}/**/dist/*.(m|c|)js", "!**/node_modules/**"]
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/vscode-extension",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension",
                "--extensionTestsPath=${workspaceFolder}/apps/vscode-extension/out/test/suite/index"
            ],
            // Enable this when (custom) webviews need to be availble through the debugger
            // "debugWebviews": true,
            "cascadeTerminateToConfigurations": ["Attach to the Language Server"],
            "outFiles": ["${workspaceFolder}/**/dist/*.(m|c|)js", "!**/node_modules/**"]
        },
        {
            "presentation": {
                "hidden": true
            },
            "name": "Attach to the Language Server",
            "type": "node",
            "request": "attach",
            "port": 6009,
            "restart": {
                "delay": 1000,
                "maxAttempts": 3
            },
            "continueOnAttach": true,
            "autoAttachChildProcesses": true,
            "showAsyncStacks": true,
            "cascadeTerminateToConfigurations": ["Run Extension", "Run Extension (all extensions disabled)"],
            "outFiles": ["${workspaceFolder}/**/dist/*.(m|c|)js", "!**/node_modules/**"]
        }
    ]
}

{
    "name": "@regex-radar/monorepo",
    "private": true,
    "packageManager": "npm@11.3.0",
    "license": "MIT",
    "type": "module",
    "engines": {
        "node": ">= 24"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:production": "turbo run build:production",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "tsc": "turbo run tsc",
        "clean": "turbo run clean",
        "format": "prettier --cache --cache-strategy metadata --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@tsconfig/recommended": "^1.0.11",
        "prettier": "^3.6.2",
        "turbo": "^2.6.0",
        "typescript": "~5.9.3",
        "@local/vscode-languageserver-protocol": "file:../vscode-languageserver-node/protocol",
        "@local/vscode-jsonrpc": "file:../vscode-languageserver-node/jsonrpc",
        "@local/vscode-languageclient": "file:../vscode-languageserver-node/client",
        "@local/vscode-languageserver": "file:../vscode-languageserver-node/server",
        "@local/recheck": "file:../recheck/packages/recheck"
    }
}
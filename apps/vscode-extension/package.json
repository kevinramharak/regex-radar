{
    "name": "@regex-radar/vscode-extension",
    "private": true,
    "displayName": "Regex Radar",
    "publisher": "Kevin Ramharak",
    "description": "The Regex Radar extension for vscode",
    "version": "0.1.0",
    "type": "module",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar",
        "directory": "apps/vscode-extension"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "engines": {
        "vscode": "^1.105.0"
    },
    "vsce": {
        "dependencies": false
    },
    "categories": [],
    "activationEvents": [],
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "regex-radar-tree-view",
                    "name": "Regex Radar",
                    "icon": "",
                    "visibility": "collapsed"
                }
            ]
        }
    },
    "main": "./dist/extension.cjs",
    "browser": "./dist/extension.browser.cjs",
    "types": "./dist/extension.d.ts",
    "files": [
        "dist/**/*",
        "assets/**/*",
        "LICENSE"
    ],
    "scripts": {
        "build": "node scripts/build.js",
        "dev": "node scripts/build.js --watch",
        "package": "node scripts/build.js --production",
        "tsc": "tsc -p .",
        "clean": "rm -r dist/"
    },
    "devDependencies": {
        "@types/node": "^22.18.10",
        "@types/vscode": "^1.105.0",
        "esbuild": "^0.25.11"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "@regex-radar/client": "*"
    }
}
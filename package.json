{
    "name": "@regex-radar/monorepo",
    "private": true,
    "packageManager": "npm@11.3.0",
    "license": "MIT",
    "type": "module",
    "engines": {
        "node": ">= 24"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:production": "turbo run build:production",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "tsc": "turbo run tsc",
        "clean": "turbo run clean",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.10",
        "prettier": "^3.6.2",
        "turbo": "^2.5.8",
        "typescript": "~5.9.3"
    }
}
{
    "name": "@regex-radar/monorepo",
    "description": "A toolkit for developing & maintaining Regular Expressions powered by the Language Service Protocol",
    "private": true,
    "packageManager": "npm@11.3.0",
    "license": "SEE LICENCE IN LICENCE",
    "type": "module",
    "engines": {
        "node": ">= 24"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:production": "turbo run build:production",
        "dev": "turbo run dev",
        "tsc": "tsc -b tsconfig.json",
        "clean": "turbo run clean",
        "lint": "eslint --fix",
        "format": "prettier --cache --cache-strategy metadata --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@local/recheck": "file:../recheck/packages/recheck",
        "@local/vscode-jsonrpc": "file:../vscode-languageserver-node/jsonrpc",
        "@local/vscode-languageclient": "file:../vscode-languageserver-node/client",
        "@local/vscode-languageserver": "file:../vscode-languageserver-node/server",
        "@local/vscode-languageserver-protocol": "file:../vscode-languageserver-node/protocol",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@tsconfig/recommended": "^1.0.12",
        "eslint": "^9.39.1",
        "eslint-plugin-package-json": "^0.65.3",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "turbo": "^2.6.1",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.4"
    }
}
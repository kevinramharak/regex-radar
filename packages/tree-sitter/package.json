{
    "name": "@regex-radar/tree-sitter",
    "private": true,
    "displayName": "Regex Radar Tree Sitter parsers, grammars and queries",
    "publisher": "regex-radar",
    "description": "The Tree Sitter componentsd used by Regex Radar",
    "version": "0.1.3",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./grammars/*.wasm": "./grammars/*.wasm"
    },
    "imports": {
        "#wasm/tree-sitter.wasm": "web-tree-sitter/tree-sitter.wasm",
        "#wasm/grammars/*.wasm": "@regex-radar/tree-sitter/grammars/*.wasm"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar",
        "directory": "packages/tree-sitter"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "scripts": {
        "dev": "node scripts/build.js --watch",
        "build": "node scripts/build.js",
        "build:production": "node scripts/build.js --production",
        "build:grammars": "node scripts/build-grammars.js",
        "tsc": "tsc -b tsconfig.json",
        "clean": "rm -r dist/"
    },
    "devDependencies": {
        "@regex-radar/lsp-types": "*",
        "esbuild": "^0.27.0",
        "tree-sitter-cli": "^0.25.10",
        "tree-sitter-javascript": "^0.25.0",
        "tree-sitter-json": "^0.24.8",
        "tree-sitter-typescript": "^0.23.2",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12"
    },
    "dependencies": {
        "web-tree-sitter": "^0.25.10"
    }
}

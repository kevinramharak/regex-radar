{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        "tsconfig.json"
    ],
    "tasks": {
        "build": {
            "cache": false
        },
        "build:production": {
            "cache": false
        },
        "lint": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
{
    "name": "regex-radar",
    "private": true,
    "displayName": "Regex Radar",
    "publisher": "regex-radar",
    "description": "Workspace-aware regex exploration, testing, and safety analysis powered by the Language Server Protocol.",
    "version": "0.1.3",
    "scripts": {
        "build": "node scripts/build.js",
        "dev": "node scripts/build.js --watch",
        "build:production": "node scripts/build.js --production",
        "vscode:prepublish": "cd ../.. && npm run build:production",
        "package": "node scripts/package.js",
        "publish": "node scripts/publish.js",
        "tsc": "tsc -b tsconfig.json",
        "clean": "rm -r dist/"
    },
    "devDependencies": {
        "@types/node": "^22.18.13",
        "@types/vscode": "^1.105.0",
        "@vscode/vsce": "^3.6.2",
        "esbuild": "^0.25.12"
    },
    "dependencies": {
        "@regex-radar/client": "*",
        "vscode-languageclient": "^9.0.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar.git",
        "directory": "apps/vscode-extension"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "bugs": {
        "url": "https://github.com/kevinramharak/regex-radar/issues"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/kevinramharak"
    },
    "galleryBanner": {
        "color": "#fdf7ec",
        "theme": "light"
    },
    "license": "SEE LICENCE IN LICENCE",
    "qna": false,
    "type": "module",
    "icon": "assets/icon.png",
    "main": "./dist/extension.js",
    "files": [
        "dist/extension.min.js",
        "dist/server.min.js",
        "dist/wasm/*.wasm",
        "dist/workers/recheck/*",
        "dist/node_modules/**",
        "assets/icon.png",
        "LICENSE"
    ],
    "engines": {
        "vscode": "^1.105.0"
    },
    "vsce": {
        "dependencies": false
    },
    "keywords": [
        "analysis",
        "regex",
        "RegExp",
        "RegExr",
        "Regex101",
        "regular expression",
        "ReDoS",
        "Regular Expression DOS",
        "Regular Expression Denial of Service",
        "Denial of Service",
        "security",
        "vulnerable",
        "lint",
        "linter",
        "lsp"
    ],
    "categories": [
        "Linters",
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:javascriptreact",
        "onLanguage:typescriptreact"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "regex-radar__regex-explorer",
                    "title": "Regex Explorer",
                    "icon": "$(regex)"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Regex Radar",
            "properties": {
                "regex-radar.discovery.scope": {
                    "type": "string",
                    "default": "open-workspaces",
                    "enum": [
                        "off",
                        "open-editors",
                        "open-workspaces"
                    ],
                    "enumDescriptions": [
                        "Disable regex discovery.",
                        "Scan only regex patterns in open editors.",
                        "Scan the open workspaces for regex patterns."
                    ],
                    "markdownDescription": "Controls where Regex Radar searches for regex patterns."
                },
                "regex-radar.languages": {
                    "type": "array",
                    "default": [
                        "javascript",
                        "typescript"
                    ],
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "enum": [
                            "javascript",
                            "typescript"
                        ]
                    },
                    "markdownDescription": "Programming languages to scan for regex literals and patterns."
                },
                "regex-radar.diagnostics.workspace.enabled": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Runs diagnostics for regexes across the entire workspace, not just open editors."
                },
                "regex-radar.diagnostics.redos.enabled": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Analyze regular expressions for ReDoS vulnerabilities."
                },
                "regex-radar.diagnostics.linter.enabled": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable the built-in linter for regular expressions."
                },
                "regex-radar.diagnostics.linter.rules": {
                    "markdownDescription": "Enable individual linter rules.",
                    "type": "object",
                    "additionalProperties": false,
                    "default": {
                        "no-control-regex": true,
                        "no-invalid-regexp": true,
                        "no-regex-spaces": true,
                        "prefer-regex-new-expression": true,
                        "prefer-regex-literals": true
                    },
                    "properties": {
                        "no-control-regex": {
                            "type": "boolean",
                            "default": true,
                            "markdownDescription": "Disallow control characters in regular expressions."
                        },
                        "no-invalid-regexp": {
                            "type": "boolean",
                            "default": true,
                            "markdownDescription": "Disallow invalid regular expressions in RegExp constructor calls."
                        },
                        "no-regex-spaces": {
                            "type": "boolean",
                            "default": true,
                            "markdownDescription": "Disallow unnecessary spaces in regular expressions."
                        },
                        "prefer-regex-new-expression": {
                            "type": "boolean",
                            "default": true,
                            "markdownDescription": "Prefer using `new RegExp()` when constructing dynamic expressions."
                        },
                        "prefer-regex-literals": {
                            "type": "boolean",
                            "default": true,
                            "markdownDescription": "Prefer regex literals over `new RegExp()` when possible."
                        }
                    }
                },
                "@regex-radar/client.trace.server": {
                    "markdownDescription": "Traces the communication between VS Code and the language server.\n\n*This setting is used for extension development & debugging purposes.*",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "ignoreSync": true,
                    "default": "off",
                    "tags": [
                        "advanced"
                    ]
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "regex-radar.explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "collapsed"
                }
            ],
            "regex-radar__regex-explorer": [
                {
                    "id": "regex-radar.regex-explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "visible"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "regex-radar.tree-data-provider.refresh",
                    "when": "view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "regex-radar.tree-data-provider.openInRegExr",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                },
                {
                    "command": "regex-radar.tree-data-provider.openInRegex101",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                }
            ]
        },
        "commands": [
            {
                "command": "regex-radar.tree-data-provider.refresh",
                "enablement": "(view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(refresh)",
                "title": "Refresh",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegExr",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(globe)",
                "title": "Open in RegexR",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegex101",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(globe)",
                "title": "Open in Regex101",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.reveal",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.active || view.regex-radar.explorer.tree-view.active)",
                "icon": "$(link)",
                "title": "Reveal in the Regex Explorer",
                "category": "Regex Radar"
            }
        ]
    }
}

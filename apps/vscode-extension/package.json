{
    "name": "regex-radar",
    "private": true,
    "displayName": "Regex Radar",
    "publisher": "kevinramharak",
    "description": "The Regex Radar extension for vscode",
    "version": "0.1.0",
    "type": "commonjs",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar",
        "directory": "apps/vscode-extension"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "bugs": {
        "url": "https://github.com/kevinramharak/regex-radar/issues"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/kevinramharak"
    },
    "license": "SEE LICENCE IN LICENCE",
    "qna": false,
    "regex-radar.trace.server": {
        "default": "verbose"
    },
    "engines": {
        "vscode": "^1.105.0"
    },
    "vsce": {
        "dependencies": false
    },
    "categories": [
        "Linters",
        "Visualization",
        "Testing",
        "Education",
        "Programming Languages",
        "Other",
        "Debuggers"
    ],
    "activationEvents": [],
    "main": "./dist/extension.min.cjs",
    "files": [
        "dist/extension.min.cjs",
        "assets/**/*",
        "LICENSE"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "regex-radar__regex-explorer",
                    "title": "Regex Explorer",
                    "icon": "$(regex)"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Regex Radar",
            "properties": {
                "regex-radar.discovery.enabled": {
                    "description": "Enables discovery of regular expressions throughout the workspace.",
                    "type": "boolean",
                    "default": true
                },
                "regex-radar.languages.enabled": {
                    "description": "The programming languages that Regex Radar will provide its features for.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "javascript",
                            "typescript"
                        ]
                    },
                    "uniqueItems": true,
                    "default": [
                        "javascript",
                        "typescript"
                    ]
                },
                "@regex-radar/client.trace.server": {
                    "description": "Traces the communication between VS Code and the language server.",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "ignoreSync": true,
                    "default": "off"
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "regex-radar.explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "collapsed"
                }
            ],
            "regex-radar__regex-explorer": [
                {
                    "id": "regex-radar.regex-explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "visible"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "regex-radar.tree-data-provider.refresh",
                    "when": "view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "regex-radar.tree-data-provider.openInRegExr",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                },
                {
                    "command": "regex-radar.tree-data-provider.openInRegex101",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                },
                {
                    "command": "regex-radar.test",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                }
            ]
        },
        "commands": [
            {
                "command": "regex-radar.tree-data-provider.refresh",
                "enablement": "(view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(refresh)",
                "title": "Refresh",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegExr",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(globe)",
                "title": "Open in RegexR",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegex101",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible)",
                "icon": "$(globe)",
                "title": "Open in Regex101",
                "category": "Regex Radar"
            },
            {
                "command": "regex-radar.tree-data-provider.reveal",
                "enablement": "!inCommandsPicker && (view.regex-radar.regex-explorer.tree-view.active || view.regex-radar.explorer.tree-view.active)",
                "icon": "$(link)",
                "title": "Reveal in the Regex Explorer",
                "category": "Regex Radar"
            }
        ]
    },
    "scripts": {
        "build": "node scripts/build.mjs",
        "dev": "node scripts/build.mjs --watch",
        "build:production": "node scripts/build.mjs --production",
        "package": "vsce package",
        "tsc": "tsc -p .",
        "clean": "rm -r dist/"
    },
    "devDependencies": {
        "@types/node": "^22.18.13",
        "@types/vscode": "^1.105.0",
        "esbuild": "^0.25.12"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "@regex-radar/client": "*"
    }
}
{
    "name": "@regex-radar/server",
    "private": true,
    "displayName": "Regex Radar Language Server",
    "publisher": "regex-radar",
    "description": "The Language Server for Regex Radar",
    "version": "0.1.0",
    "type": "module",
    "imports": {
        "#wasm/tree-sitter.wasm": "web-tree-sitter/tree-sitter.wasm",
        "#wasm/grammars/*.wasm": "@regex-radar/parsers/grammars/*.wasm",
        "#workers/recheck/thread.worker": "@local/recheck/thread.worker.js"
    },
    "exports": {
        ".": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar",
        "directory": "packages/server"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "scripts": {
        "build": "node scripts/build.js",
        "dev": "node scripts/build.js --watch",
        "build:production": "node scripts/build.js --production",
        "tsc": "tsc -p .",
        "clean": "rm -r dist/"
    },
    "dependencies": {
        "@gitlab/needle": "^1.5.1",
        "@regex-radar/lsp-types": "*",
        "@regex-radar/parsers": "*",
        "recheck": "^4.5.0",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12",
        "vscode-uri": "^3.1.0"
    },
    "devDependencies": {
        "esbuild": "^0.25.12"
    }
}